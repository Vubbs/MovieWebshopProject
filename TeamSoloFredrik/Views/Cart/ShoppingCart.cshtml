@model TeamSoloFredrik.Models.ViewModels.SessionMoviesVM

<h3>Shopping Cart</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Remove</th>
            <th># of Items</th>
            <th>Add</th>
            <th>Price Total for Items</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies.OrderBy(m => m.Id))
        {
            <partial name="_orderPartial" model="@item" />
        }
    </tbody>
</table>
<div class="row">
    <div class="container">
        <h6 class="float-end">Total Price: @Model.TotalPrice :-</h6>
        <br /><br />
        <form asp-action="MakeOrder" asp-controller="Order" method="post" class="float-none">
            <input type="email" name="email" placeholder="Enter Email Address to Continue" class="rounded-2 float-end" required />
            <br /><br />
            <button type="submit" class="btn btn-primary float-end">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart" viewBox="0 0 20 20">
                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                </svg>
                Checkout Order
            </button>
        </form>
    </div>
</div>
